<div class="container">
  <h1>Mi Carrito</h1>

  {{#if error}}
    <p class="error-message">{{error}}</p>
  {{else if products.length}}
    <table class="cart-table">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Categoría</th>
          <th>Precio unitario</th>
          <th>Cantidad</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.product.category}}</td>
            <td>${{this.product.price}}</td>
            <td>{{this.quantity}}</td>
            <td>${{multiply this.product.price this.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="no-products">El carrito está vacío.</p>
  {{/if}}

  <a href="/products" class="btn-back">← Seguir comprando</a>
</div>
