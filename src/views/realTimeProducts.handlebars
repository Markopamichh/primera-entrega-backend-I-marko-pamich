<div class="container">
  <h1>Productos en Tiempo Real</h1>

  <div class="real-time-controls">
    <h2>Agregar Nuevo Producto</h2>
    <form id="addProductForm">
      <div class="form-row">
        <input type="text" name="title" placeholder="Título" required>
        <input type="text" name="code" placeholder="Código" required>
      </div>
      <div class="form-row">
        <textarea name="description" placeholder="Descripción" required></textarea>
      </div>
      <div class="form-row">
        <input type="number" name="price" placeholder="Precio" required min="0" step="0.01">
        <input type="number" name="stock" placeholder="Stock" required min="0">
      </div>
      <div class="form-row">
        <input type="text" name="category" placeholder="Categoría" required>
      </div>
      <button type="submit">Agregar Producto</button>
    </form>
  </div>

  <div class="real-time-products">
    <h2>Lista de Productos (Actualización Automática)</h2>
    <div id="productsList" class="product-grid">
      {{#if products.length}}
        {{#each products}}
          <div class="product-card" data-id="{{this.id}}">
            <h3>{{this.title}}</h3>
            <p class="description">{{this.description}}</p>
            <div class="product-details">
              <p><strong>Código:</strong> {{this.code}}</p>
              <p><strong>Precio:</strong> ${{this.price}}</p>
              <p><strong>Stock:</strong> {{this.stock}}</p>
              <p><strong>Categoría:</strong> {{this.category}}</p>
            </div>
            <button class="delete-btn" data-id="{{this.id}}">Eliminar</button>
          </div>
        {{/each}}
      {{else}}
        <p class="no-products">No hay productos disponibles.</p>
      {{/if}}
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>
